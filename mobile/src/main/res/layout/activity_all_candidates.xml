                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:onClick="openCandidateTwitter"
                    android:text="\@BarackObama"
                    android:textColor="@color/wallet_holo_blue_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/most_recent_tweet_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/twitter_name_2"
                    android:layout_centerHorizontal="true"
                    android:text="cant believe trump is actually picking up states! #wakeupAmerica"
                    android:textColor="#4d4c4c"
                    android:maxLines="3"
                    android:textSize="13sp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

