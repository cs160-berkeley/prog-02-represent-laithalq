<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    tools:context="com.cs160.laithalq.represent.AllCandidatesActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="ifContentScrolls"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/candidate_view_1"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardElevation="4dp"
        card_view:cardBackgroundColor="#eaeaea"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/candidate_image_1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/hillary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/candidate_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Hillary Clinton"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/candidate_info_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:onClick="showDetailedCandidateView1"
                    android:src="@drawable/ic_action_name" />

                <TextView
                    android:id="@+id/party_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/candidate_info_1"
                    android:layout_marginTop="10dp"
                    android:text="Democrat"
                    android:textColor="@color/wallet_holo_blue_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/email_button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="openCandidateEmail"
                    android:text="Email"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp"
                    android:layout_alignTop="@+id/party_name_1"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/website_button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/candidate_info_1"
                    android:layout_alignTop="@+id/email_button_1"
                    android:onClick="openCandidateWebsite"
                    android:text="Website"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/twitter_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:onClick="openCandidateTwitter"
                    android:text="\@HillaryClinton"
                    android:textColor="@color/wallet_holo_blue_light"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/most_recent_tweet_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/twitter_name_1"
                    android:layout_centerHorizontal="true"
                    android:text="Creating good-paying jobs has to be a top priority for the next president. We’ve got to build on the progress we’ve made under @POTUS"
                    android:textColor="#4d4c4c"
                    android:maxLines="3"
                    android:textSize="13sp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
