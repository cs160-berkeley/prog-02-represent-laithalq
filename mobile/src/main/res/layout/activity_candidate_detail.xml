<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    tools:context="com.cs160.laithalq.represent.AllCandidatesActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="ifContentScrolls"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/candidate_title_card"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="#eaeaea"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/candidate_image"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/hillary" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/candidate_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Hillary Clinton"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="24sp" />


                    <TextView
                        android:id="@+id/party_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="50dp" android:text="Democrat"
                        android:textColor="@color/wallet_holo_blue_light"
                        android:textSize="18sp"
                        android:layout_below="@+id/candidate_info_1"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/website_button_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Term ends 3/14/2016"
                        android:paddingTop="5dp" android:textColor="#545353"
                        android:textSize="16sp"
                        android:layout_below="@+id/party_name"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bill_record_card"
            android:layout_below="@id/candidate_title_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="#eaeaea"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/bill_record_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Bill Record"
                        android:padding="10dp"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Tea Tax"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/tax_label_1"
                        android:textColor="@color/wallet_holo_blue_light"
                        android:layout_below="@+id/bill_record_label"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="4/14/2014"
                        android:paddingRight="10dp"
                        android:id="@+id/tax_date_1"
                        android:layout_below="@+id/bill_record_label"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Solar Power Stipend"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/wallet_holo_blue_light"
                        android:id="@+id/tax_label_2"
                        android:layout_below="@+id/tax_label_1"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="6/16/2016"
                        android:paddingRight="10dp"
                        android:id="@+id/tax_date_2"

                        android:layout_alignTop="@+id/tax_label_2"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Gambling Tax"
                        android:paddingLeft="10dp"
                        android:textColor="@color/wallet_holo_blue_light"
                        android:paddingBottom="10dp"
                        android:id="@+id/tax_label_3"
                        android:layout_below="@+id/tax_label_2"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="8/18/2018"
                        android:paddingRight="10dp"
                        android:id="@+id/tax_date_3"
                        android:layout_alignTop="@+id/tax_label_3"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/committees_card"
            android:layout_below="@id/bill_record_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="#eaeaea"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/committees_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Committees"
                        android:padding="10dp"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="International Trade Commmittee"
                        android:textColor="@color/wallet_holo_blue_light"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/committee_label_1"
                        android:layout_below="@+id/committees_label"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Energy Conservation Committee"
                        android:textColor="@color/wallet_holo_blue_light"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/committee_label_2"
                        android:layout_below="@+id/committee_label_1"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Education Committee"
                        android:textColor="@color/wallet_holo_blue_light"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/committee_label_3"
                        android:layout_below="@+id/committee_label_2"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>
